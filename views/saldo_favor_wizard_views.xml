<odoo>
    <record id="view_saldo_favor_wizard_form" model="ir.ui.view">
        <field name="name">saldo.favor.wizard.form</field>
        <field name="model">saldo.favor.wizard</field>
        <field name="arch" type="xml">
            <form string="Ingreso de Saldo a Favor">
                <group>
                    <field name="partner_id"/>
                    <field name="amount"/>
                </group>
                <footer>
                    <button string="Confirmar" type="object" name="action_confirm" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
